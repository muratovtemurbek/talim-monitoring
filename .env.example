# ===== PRODUCTION UCHUN SOZLAMALAR =====
# Bu faylni .env ga nusxalang va qiymatlarni o'zgartiring

# Django Secret Key (yangi xavfsiz kalit yarating: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-super-secret-key-here

# Debug mode (production uchun False bo'lishi SHART)
DEBUG=False

# Allowed hosts (domeningizni yozing, vergul bilan ajratilgan)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Frontend URL (password reset va boshqa linklar uchun)
FRONTEND_URL=https://your-domain.com

# Gemini API Key (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Email sozlamalari
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Your App <your-email@gmail.com>

# Database (PostgreSQL tavsiya qilinadi)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# CORS allowed origins (frontend domeningiz)
CORS_ALLOWED_ORIGINS=https://your-domain.com
